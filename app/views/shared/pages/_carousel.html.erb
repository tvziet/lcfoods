<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="ibox float-e-margins">
        <div class="ibox-content ">
          <div class="carousel slide" id="carousel2">
            <ol class="carousel-indicators">
              <% @carousels.each_with_index do |index, carousel| %>
                <% if carousel == @carousels.first %>
                  <li data-slide-to="<%= index %>" data-target="#carousel2" class="active"></li>
                <% else %>
                  <li data-slide-to="<%= index %>" data-target="#carousel2"></li>
                <% end %>
              <% end %>
            </ol>
            <div class="carousel-inner">
              <% @carousels.each do |carousel| %>
                <% if carousel == @carousels.first %>
                  <div class="item active">
                    <%= image_tag(carousel.image.url, class:"img-responsive") %>
                  </div>
                <% else %>
                  <div class="item ">
                    <%= image_tag(carousel.image.url, class:"img-responsive") %>
                  </div>
                <% end %>
              <% end %>
            </div>
            <a data-slide="prev" href="#carousel2" class="left carousel-control">
              <span class="icon-prev"></span>
            </a>
            <a data-slide="next" href="#carousel2" class="right carousel-control">
              <span class="icon-next"></span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>