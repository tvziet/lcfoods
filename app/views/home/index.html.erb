<%= render 'shared/pages/navigation' %>
<%= render 'shared/pages/carousel' %>
<section class="container services m-b-xl">
  <div class="row">
    <div class="col-sm-3">
      <h3 class="text-center"><strong>QUY ĐỊNH, QUY TRÌNH</strong></h3>
      <hr style="height:2px;border-width:0;color: #c22b32;background-color: #c22b32">
        <%= image_tag("thong-bao.jpg", alt: "Banner quy định, quy trình", class:"img-responsive") %>
      <% if five_notable_regulations %>
        <% five_notable_regulations.each do |regulation| %>
          <h4><strong><%= link_to regulation.title, chi_tiet_quy_dinh_path(regulation) %></strong></h4>
          <p><%= regulation.body.truncate(100).html_safe %></p>
        <% end %>
      <% end %>
      <hr>
      <p>
        <%= link_to tat_ca_quy_dinh_path, class:"navy-link" do %>
          Xem thêm <i class="fa fa-angle-double-right" aria-hidden="true"></i>
        <% end %>
      </p>
    </div>
    <div class="col-sm-3">
      <h3 class="text-center"><strong>THÔNG BÁO</strong></h3>
      <hr style="height:2px;border-width:0;color: #c22b32;background-color: #c22b32">
      <%= image_tag("notifications.png", alt: "Banner thông báo", class:"img-responsive") %>
      <% if five_notable_notifications %>
        <% five_notable_notifications.each do |notification| %>
          <h4><strong><%= link_to notification.title, chi_tiet_thong_bao_path(notification) %></strong></h4>
          <p><%= notification.body.truncate(100).html_safe %></p>
        <% end %>
      <% end %>
      <hr>
      <p>
        <%= link_to tat_ca_thong_bao_path, class:"navy-link" do %>
          Xem thêm <i class="fa fa-angle-double-right" aria-hidden="true"></i>
        <% end %>
      </p>
    </div>
    <div class="col-sm-3">
      <h3 class="text-center"><strong>BIỂU MẪU</strong></h3>
      <hr style="height:2px;border-width:0;color: #c22b32;background-color: #c22b32">
      <%= image_tag("document.png", alt: "Banner văn bản", class:"img-responsive") %>
      <% if five_documents %>
        <% five_documents.each do |document| %>
          <h4><strong><%= link_to document&.title, document.attachment.url %></strong></h4>
        <% end %>
      <% end %>
      <hr>
      <p>
        <%= link_to tat_ca_van_ban_path, class:"navy-link" do %>
          Xem thêm <i class="fa fa-angle-double-right" aria-hidden="true"></i>
        <% end %>
      </p>
    </div>
    <div class="col-sm-3">
      <h3 class="text-center"><strong>TIN NỔI BẬT</strong></h3>
      <hr style="height:2px;border-width:0;color: #c22b32;background-color: #c22b32">
      <%= image_tag("news.jpg", alt: "Banner tin tức", class:"img-responsive") %>
      <% if five_notable_news %>
        <% five_notable_news.each do |news| %>
          <h4><strong><%= link_to news.title, chi_tiet_tin_tuc_path(news) %></strong></h4>
          <p><%= news&.body.truncate(100).html_safe %></p>
        <% end %>
      <% end %>
      <hr>
      <p>
        <%= link_to thong_tin_chung_path, class:"navy-link" do %>
          Xem thêm <i class="fa fa-angle-double-right" aria-hidden="true"></i>
        <% end %>
      </p>
    </div>
  </div>
</section>
<%= render 'shared/pages/footer' %>

