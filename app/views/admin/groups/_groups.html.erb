<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>PHÒNG BAN</h5>
        <div class="ibox-tools">
          <%= link_to "Thêm mới", new_admin_group_url, class:"btn btn-primary btn-xs" %>
        </div>
      </div>
      <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>Tên</th>
            <th>Công ty</th>
            <th>Ngày tạo</th>
            <th>Thông tin</th>
            <th>Tác vụ</th>
          </tr>
          </thead>
          <tbody>
          <% @groups.each do |group| %>
            <tr class="gradeA">
              <td><%= group.name %></td>
              <td><%= group.company.name %></td>
              <td><%= group.created_at.strftime("%d-%m-%Y") %></td>
              <td>Có <strong><%= group.users.count %></strong> nhân viên</td>
              <td>
                <%= link_to edit_admin_group_path(group), class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-pencil"></i> Cập nhật
                <% end %>
                <%= link_to admin_group_path(group), method: :delete, data: { confirm: "Bạn có chắc chắc muốn xoá phòng ban này?" }, class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-trash"></i> Xoá
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>