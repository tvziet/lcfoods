<%= form_for [:admin, @regulation], html: { multipart: true }, class: "form-horizontal" do |form| %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Tiêu đề</label>
    <div class="col-sm-10 m-b">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Nội dung</label>
    <div class="col-sm-10 m-b">
      <%= form.cktext_area :body, ckeditor: { language: 'vi'} %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Trạng thái</label>
    <div class="col-sm-10 m-b">
      <%= form.select :status, Regulation.statuses_i18n.keys.collect { |g| [t("views.statuses.#{g.downcase}"), g] }, {}, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Phòng ban</label>
    <div class="col-sm-10 m-b">
      <%= form.collection_select(:group_id, Group.all, :id, :name, {:include_blank => ("Vui lòng chọn phòng ban"), hide_label: true}, class: "form-control m-b") %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Danh mục</label>
    <div class="col-sm-10 m-b">
      <%= form.collection_select(:category_id, Category.all, :id, :name, {:include_blank => ("Vui lòng chọn danh mục"), hide_label: true}, class: "form-control m-b") %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Tệp</label>
    <div class="col-sm-10 m-b">
      <%= form.file_field :attachments, multiple: true, class:'filestyle', 'data-icon' => false, 'data-classButton' => 'btn btn-primary', 'data-classInput' => 'form-control inline input-s', 'data-buttonText' => 'Chọn tệp' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2 m-t-sm">
      <%= link_to "Quay lại", quy_dinh_quy_trinh_path, class: "btn btn-white m-r-xs" %>
      <%= form.submit class:"btn btn-primary" %>
    </div>
  </div>
<% end %>