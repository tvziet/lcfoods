<%= form_for [:admin, @carousel], html: { multipart: true }, class: "form-horizontal" do |form| %>
  <% if @carousel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@carousel.errors.count, "error") %> prohibited this carousel from being saved:</h2>
      <ul>
        <% @carousel.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Trạng thái</label>
    <div class="col-sm-10 m-b">
      <%= form.select :status, Carousel.statuses.keys.collect { |g| [t("views.statuses.#{g.downcase}"), g] }, {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Hình ảnh</label>
    <div class="col-sm-10 m-b">
      <%= form.file_field :image %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2 m-t-sm">
      <%= link_to "Quay lại", admin_path, class: "btn btn-white m-r-xs" %>
      <%= form.submit class:"btn btn-primary" %>
    </div>
  </div>
<% end %>