<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>DANH MỤC</h5>
        <div class="ibox-tools">
          <%= link_to "Thêm mới", them_moi_danh_muc_path, class:"btn btn-primary btn-xs" %>
        </div>
      </div>
      <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>Tên</th>
            <th>Ngày tạo</th>
            <th>Thông tin</th>
            <th>Tác vụ</th>
          </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr class="gradeA">
                <td><%= category.name %></td>
                <td><%= category.created_at.strftime("%d-%m-%Y") %></td>
                <td>Có <strong><%= category.regulations.count %></strong> quy định, quy trình</td>
                <td>
                  <%= link_to cap_nhat_danh_muc_path(category), class:"btn btn-white btn-sm" do %>
                    <i class="fa fa-pencil"></i> Cập nhật
                  <% end %>
                  <%= link_to xoa_danh_muc_path(category), method: :delete, data: { confirm: "Bạn có chắc chắc muốn xoá danh mục này?" }, class:"btn btn-white btn-sm" do %>
                    <i class="fa fa-trash"></i> Xoá
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= render 'shared/pages/pagy_navigation' %>
      </div>
    </div>
  </div>
</div>