<%= form_for [:admin, @category], class: "form-horizontal" do |form| %>
  <% if @category.errors.any? %>
    <div class="row">
      <div class="col-lg-4">
        <div class="panel panel-warning">
          <div class="panel-heading">
            <i class="fa fa-warning"></i> <%= pluralize(@category.errors.count, "lỗi") %> đã xảy ra:
          </div>
          <div class="panel-body">
            <ul>
              <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Tên danh mục</label>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2 m-t-sm">
      <%= link_to "Quay lại", tat_ca_danh_muc_path, class: "btn btn-white m-r-xs" %>
      <%= form.submit class:"btn btn-primary" %>
    </div>
  </div>
<% end %>

