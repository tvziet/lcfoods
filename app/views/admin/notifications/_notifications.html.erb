<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>THÔNG BÁO</h5>
        <div class="ibox-tools">
          <%= link_to "Thêm mới", them_moi_thong_bao_path, class:"btn btn-primary btn-xs" %>
        </div>
      </div>
      <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>Tiêu đề</th>
            <th>Nội dung</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Tác vụ</th>
          </tr>
          </thead>
          <tbody>
          <% @notifications.each do |notification| %>
            <tr class="gradeA">
              <td><%= notification.title %></td>
              <td><%= notification.body.truncate(200).html_safe %></td>
              <td>
                <% if notification.notable? %>
                  <span class="label label-danger"><%= notification.status_i18n %></span>
                <% else %>
                  <span class="label label-default"><%= notification.status_i18n %></span>
                <% end %>
              </td>
              <td><%= notification.created_at.strftime("%d-%m-%Y") %></td>
              <td>
                <%= link_to cap_nhat_thong_bao_path(notification), class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-pencil"></i> Cập nhật
                <% end %>
                <%= link_to xoa_thong_bao_path(notification), method: :delete, data: { confirm: "Bạn có chắc chắc muốn xoá thông báo này?" }, class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-trash"></i> Xoá
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <%= render 'shared/pages/pagy_navigation' %>
      </div>
    </div>
  </div>
</div>