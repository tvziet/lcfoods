<%= form_for [:admin, @notification], html: { multipart: true }, class: "form-horizontal" do |form| %>
  <% if @notification.errors.any? %>
    <div class="row">
      <div class="col-lg-4">
        <div class="panel panel-warning">
          <div class="panel-heading">
            <i class="fa fa-warning"></i> <%= pluralize(@notification.errors.count, "lỗi") %> đã xảy ra:
          </div>
          <div class="panel-body">
            <ul>
              <% @notification.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Tiêu đề</label>
    <div class="col-sm-10 m-b">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Nội dung</label>
    <div class="col-sm-10 m-b">
      <%= form.trix_editor :body, required: true, autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Trạng thái</label>
    <div class="col-sm-10 m-b">
      <%= form.select :status, Notification.statuses.keys.collect { |g| [t("views.statuses.#{g.downcase}"), g] }, {}, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Công ty</label>
    <div class="col-sm-10 m-b">
      <%= form.collection_select(:company_id, Company.all, :id, :name, {:include_blank => ("Vui lòng chọn công ty"), hide_label: true}, class: "form-control m-b") %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Danh mục</label>
    <div class="col-sm-10 m-b">
      <%= form.collection_select(:category_id, Category.all, :id, :name, {:include_blank => ("Vui lòng chọn danh mục"), hide_label: true}, class: "form-control m-b") %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Tệp</label>
    <div class="col-sm-10 m-b">
      <%= form.file_field :attachments, multiple: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2 m-t-sm">
      <%= link_to "Quay lại", admin_notifications_url, class: "btn btn-white m-r-xs" %>
      <%= form.submit class:"btn btn-primary" %>
    </div>
  </div>
<% end %>