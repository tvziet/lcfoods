<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>NHÂN VIÊN</h5>
        <div class="ibox-tools">
          <%= link_to "Thêm mới", them_moi_nhan_vien_path, class:"btn btn-primary btn-xs" %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <% @users.each do |user| %>
    <div class="col-lg-3">
      <div class="contact-box center-version">
        <%= link_to cap_nhat_nhan_vien_path(user) do %>
          <%= image_tag(user&.avatar, class: "img-circle") %>
          <h3 class="m-b-xs"><strong><%= user.name.full %></strong></h3>
          <div class="font-bold"><%= user.group_name %></div>
          <address class="m-t-md">
            <strong><%= user.group_name %></strong><br>
            <%= user.address %><br>
            <span>Email:</span> <%= user.email %>
          </address>
        <% end %>
        <div class="contact-box-footer">
          <div class="m-t-xs btn-group">
            <a class="btn btn-xs btn-white"><i class="fa fa-envelope"></i> SĐT: <%= user.cell_phone %></a>
            <a class="btn btn-xs btn-white"><i class="fa fa-envelope"></i> Mã nhân viên: <%= user.employee_number %></a>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= render 'shared/pages/pagy_navigation' %>