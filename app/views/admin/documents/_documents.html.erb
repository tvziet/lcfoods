<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>VĂN BẢN, BIỂU MẪU</h5>
        <div class="ibox-tools">
          <%= link_to "Thêm mới", new_admin_document_path , class:"btn btn-primary btn-xs" %>
        </div>
      </div>
      <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>Tiêu đề</th>
            <th>Ngày tạo</th>
            <th>Tác vụ</th>
          </tr>
          </thead>
          <tbody>
          <% @documents.each do |document| %>
            <tr class="gradeA">
              <td><%= document.title %></td>
              <td><%= document.created_at.strftime("%d-%m-%Y") %></td>
              <td>
                <%= link_to edit_admin_document_path(document), class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-pencil"></i> Cập nhật
                <% end %>
                <%= link_to admin_document_path(document), method: :delete, data: { confirm: "Bạn có chắc chắc muốn xoá biểu mẫu này?" }, class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-trash"></i> Xoá
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>