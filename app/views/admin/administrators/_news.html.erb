<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>TIN TỨC GẦN ĐÂY</h5>
      </div>
      <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>Tiêu đề</th>
            <th>Nội dung</th>
            <th>Tác vụ</th>
          </tr>
          </thead>
          <tbody>
          <% @news.each do |news| %>
            <tr class="gradeA">
              <td><%= news.title%></td>
              <td><%= news.body.truncate(200).html_safe %></td>
              <td>
                <%= link_to cap_nhat_tin_tuc_path(news), class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-pencil"></i> Cập nhật
                <% end %>
                <%= link_to xoa_tin_tuc_path(news), method: :delete, data: { confirm: "Bạn có chắc chắc muốn xoá tin tức này?" }, class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-trash"></i> Xoá
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>