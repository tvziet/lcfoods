<% elsif object.is_a? Regulation %>
  <h3><%= link_to object.title, chi_tiet_quy_dinh_path(object), class:"text-danger" %></h3>
<% elsif object.is_a? Notification %>
  <h3><%= link_to object.title, chi_tiet_thong_bao_path(object), class:"text-danger" %></h3>
<% elsif object.is_a? Document %>
  <h3><%= link_to object.title, chi_tiet_quy_dinh_path(object), class:"text-danger" %></h3>
