<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>TẤT CẢ PHÒNG BAN</h5>
      </div>
      <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>Tên</th>
            <th>Thông tin</th>
            <th>Tác vụ</th>
          </tr>
          </thead>
          <tbody>
          <% @groups.each do |group| %>
            <tr class="gradeA">
              <td><%= group.name %></td>
              <td>
                <ul>
                  <li class="dropdown">
                    Phòng <strong><%= group.name %></strong> có <strong><%= group.users.size %></strong> nhân viên
                  </li>
                </ul>
              </td>
              <td>
                <%= link_to cap_nhat_phong_ban_path(group), class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-pencil"></i> Cập nhật
                <% end %>
                <%= link_to xoa_phong_ban_path(group), method: :delete, data: { confirm: "Bạn có chắc chắc muốn xoá phòng ban này?" }, class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-trash"></i> Xoá
                <% end %>
              </td>
            </tr>
          <% end %>
          </table>
      </div>
    </div>
  </div>
</div>