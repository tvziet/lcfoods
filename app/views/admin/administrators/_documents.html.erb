<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>VĂN BẢN, BIỂU MẪU GẦN ĐÂY</h5>
      </div>
      <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>Tiêu đề</th>
            <th>Tệp</th>
            <th>Tác vụ</th>
          </tr>
          </thead>
          <tbody>
          <% @documents.each do |document| %>
            <tr class="gradeA">
              <td><%= document.title %></td>
              <td>
                <% if document.attachment.url.split("/").last.include?("pdf") %>
                  Tệp đính kèm: </strong><%= link_to "#{document.attachment.file.filename}", pdfjs.full_path(file: "#{document.attachment.url}") %>
                <% else %>
                  Tải về: <i class="fa fa-download" aria-hidden="true"></i>
                  <%= link_to document.attachment.file.filename, document.attachment.url %>
                <% end %>
              </td>
              <td>
                <%= link_to cap_nhat_van_ban_bieu_mau_path(document), class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-pencil"></i> Cập nhật
                <% end %>
                <%= link_to xoa_van_ban_bieu_mau_path(document), method: :delete, data: { confirm: "Bạn có chắc chắc muốn xoá văn bản, biểu mẫu này?" }, class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-trash"></i> Xoá
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>