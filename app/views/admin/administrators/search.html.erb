<% provide(:title, 'Admin - Tìm kiếm') %>
<%= render 'shared/admin/navigation' %>
<%= render 'shared/admin/flash_messages' %>
<div id="page-wrapper" class="gray-bg">
  <%= render 'shared/admin/top_navbar' %>
  <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
      <h2>Tổng quan dữ liệu</h2>
      <ol class="breadcrumb">
        <li>
          <%= link_to 'Trang chủ', admin_path %>
        </li>
        <li class="active">
          <strong>Kết quả tìm kiếm</strong>
        </li>
      </ol>
    </div>
  </div>
  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox float-e-margins">
          <div class="ibox-content">
            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                <th>
                  <h4>Có <%= @array_of_result_objects.flatten.count %> kết quả tìm kiếm cho từ khoá: <span class="text-danger"><%= params["search"] %></span></h4>
                </th>
              </tr>
              </thead>
              <tbody>
              <% @array_of_result_objects.flatten.each do |array_of_result_object| %>
                <tr class="gradeX">
                  <td><%= render 'admin/administrators/result', object: array_of_result_object %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/admin/footer' %>