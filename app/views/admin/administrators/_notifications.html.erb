<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>THÔNG BÁO GẦN ĐÂY</h5>
      </div>
      <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>Tiêu đề</th>
            <th>Nội dung</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Tác vụ</th>
          </tr>
          </thead>
          <tbody>
          <% @notifications.each do |notification| %>
            <tr class="gradeA">
              <td><%= notification.title %></td>
              <td><%= sanitize notification.body %></td>
              <td class="project-status">
                <% if notification.active? %>
                  <span class="label label-primary"><%= t("views.statuses.active") %></span>
                <% else %>
                  <span class="label label-default"><%= t("views.statuses.unactive") %></span>
                <% end %>
              </td>
              <td><%= notification.created_at.strftime("%d-%m-%Y") %></td>
              <td>
                <%= link_to edit_admin_notification_path(notification), class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-pencil"></i> Cập nhật
                <% end %>
                <%= link_to admin_notification_path(notification), method: :delete, data: { confirm: "Bạn có chắc chắc muốn xoá quy định này?" }, class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-trash"></i> Xoá
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>