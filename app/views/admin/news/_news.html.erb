<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>TIN TỨC</h5>
        <div class="ibox-tools">
          <%= link_to "Thêm mới", new_admin_news_path, class:"btn btn-primary btn-xs" %>
        </div>
      </div>
      <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>Tiêu đề</th>
            <th>Nội dung</th>
            <th>Ngày tạo</th>
            <th>Tác vụ</th>
          </tr>
          </thead>
          <tbody>
          <% @all_news.each do |news| %>
            <tr class="gradeA">
              <td><%= news.title %></td>
              <td><%= news.body.to_s.html_safe %></td>
              <td><%= news.created_at.strftime("%d-%m-%Y") %></td>
              <td>
                <%= link_to edit_admin_news_path(news), class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-pencil"></i> Cập nhật
                <% end %>
                <%= link_to admin_news_path(news), method: :delete, data: { confirm: "Bạn có chắc chắc muốn xoá tin tức này?" }, class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-trash"></i> Xoá
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>