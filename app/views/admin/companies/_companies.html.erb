<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>CÔNG TY</h5>
        <div class="ibox-tools">
          <%= link_to "Thêm mới", them_moi_cong_ty_path, class:"btn btn-primary btn-xs" %>
        </div>
      </div>
      <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <thead>
          <tr>
            <th>Tên</th>
            <th>Ngày tạo</th>
            <th>Thông tin</th>
            <th>Tác vụ</th>
          </tr>
          </thead>
          <tbody>
          <% @companies.each do |company| %>
            <tr class="gradeA">
              <td><%= company.name %></td>
              <td><%= company.created_at.strftime("%d-%m-%Y") %></td>
              <td>Có <strong><%= company.users.count %></strong> nhân viên</td>
              <td>
                <%= link_to cap_nhat_cong_ty_path(company), class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-pencil"></i> Cập nhật
                <% end %>
                <%= link_to xoa_cong_ty_path(company), method: :delete, data: { confirm: "Bạn có chắc chắc muốn xoá công ty này?" }, class:"btn btn-white btn-sm" do %>
                  <i class="fa fa-trash"></i> Xoá
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <%= render 'shared/pages/pagy_navigation' %>
      </div>
    </div>
  </div>
</div>