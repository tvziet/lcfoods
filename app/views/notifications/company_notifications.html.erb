<% provide(:title, 'Thông báo') %>
<%= render 'shared/pages/navigation' %>

<div class="wrapper wrapper-content  animated fadeInRight blog">
  <div class="row">
    <% @company_notifications.each do |company_notification| %>
      <div class="col-lg-4">
        <div class="ibox">
          <div class="ibox-content">
            <h3><%= link_to company_notification.title, chi_tiet_thong_bao_path(company_notification), class:"text-danger" %></h3>
            <div class="small m-b-xs">
              <strong>Admin</strong> <span class="text-muted"><i class="fa fa-clock-o"></i> <%= company_notification.created_at.strftime("%d-%m-%Y") %></span>
            </div>
            <p>
              <%= company_notification.body.to_s.html_safe %>
            </p>
            <div class="row">
              <div class="col-md-6">
                <%= link_to chi_tiet_thong_bao_path(company_notification), class: "btn btn-primary btn-xs" do %>
                  Chi tiết <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% if params["search"] %>
  <%= render 'notifications/search' %>
<% end %>
<% if  @company_notifications.count > 10 %>
  <%= render 'shared/pages/pagy_navigation' %>
<% end %>
<%= render 'shared/pages/footer' %>

