<% provide(:title, 'Admin - Đăng nhập') %>
<%= render 'shared/admin/flash_messages' %>
<div class="loginColumns animated fadeInDown">
  <div class="row">
    <div class="col-md-6">
      <h2 class="font-bold">Chào mừng đến với trang quản trị của tập đoàn LC Foods</h2>
    </div>
    <div class="col-md-6">
      <div class="ibox-content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "m-t") do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Mật khẩu" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Ghi nhớ" %>
            </div>
          <% end %>
          <%= f.submit "Đăng nhập", class:"btn btn-primary block full-width m-b" %>
        <% end %>
      </div>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-md-6">
      LC Foods
    </div>
    <div class="col-md-6 text-right">
      <small><strong>Phát triển bởi LTV </strong>&copy; <%= DateTime.now.year %></small>
    </div>
  </div>
</div>


