<div class="middle-box text-center loginscreen animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">LC FOODS</h1>
    </div>
    <h3>Chỉnh sửa thông tin</h3>
    <p>Admin: <%= current_admin.full_name %>.</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "m-t") do |f| %>
      <div class="form-group">
        <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", placeholder: "Họ tên", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "Mật khẩu mới" %>
        <% if @minimum_password_length %>
          <br />
          <em>Tối thiểu <%= @minimum_password_length %> ký tự</em>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "Xác nhận mật khẩu mới" %>
      </div>
      <div class="form-group">
        <i>(Nhập mật khẩu hiện tại để thay đổi mật khẩu)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Mật khẩu hiện tại" %>
      </div>
      <%= f.submit "Cập nhật", class: "btn btn-primary block full-width m-b" %>
      <%= link_to 'Quay lại', admin_path, class:"btn btn-sm btn-white btn-block" %>
    <% end %>
    <p class="m-t"> <small>LC Foods &copy; <%= DateTime.now.year %></small> </p>
  </div>
</div>

