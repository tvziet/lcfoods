<div class="middle-box text-center loginscreen   animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">LC FOODS</h1>
    </div>
    <h3>Đăng ký tài khoản Quản trị</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:"m-t") do |f| %>
        <div class="form-group">
          <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class:"form-control", placeholder:"Họ tên" %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
        </div>
        <div class="form-group">
          <em>Tối thiểu <%= @minimum_password_length %> ký tự</em>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Mật khẩu" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Xác nhận mật khẩu" %>
        </div>
      <%= f.submit "Tạo tài khoản", class:"btn btn-primary block full-width m-b" %>
    <% end %>
    <p class="m-t"> <small>LC Foods &copy; <%= DateTime.now.year %></small> </p>
  </div>
</div>

